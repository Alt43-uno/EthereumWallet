<Window x:Class="EthereumWallet.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login - Ethereum Wallet" Height="300" Width="400">
    <Grid>
        <TextBox x:Name="SeedPhraseTextBox" Style="{StaticResource TextBoxStyle}" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="Seed Phrase" VerticalAlignment="Top" Width="200"/>
        <Button x:Name="LoginButton" Style="{StaticResource ButtonStyle}" Content="Login" HorizontalAlignment="Left" Margin="220,10,0,0" VerticalAlignment="Top" Width="75" Click="LoginButton_Click"/>
        <Button x:Name="CreateWalletButton" Content="Create Wallet" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" Width="120" Click="CreateWalletButton_Click"/>
    </Grid>
</Window>
